PlayerRoot:
<PlayerRoot@BoxLayout>:
    canvas.before:
        Color:
            rgba: 51, 51, 51, 0.1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        BoxLayout:
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    size_hint_y: 0.1
                BoxLayout:
                    size_hint_y: 3
                    Image:
                        source: './img/track.jpg'
                        keep_ratio: True
                        allow_stretch: True
                BoxLayout:
                    size_hint_y: 0.5
                    Label:
                        text: "Track title"
                BoxLayout:
                    size_hint_y: 1
                    BoxLayout:
                        orientation: "vertical"
                        BoxLayout:
                            Button:
                                text: "Previous"
                                on_press: root.previous()
                                background_color: 0, 0, 0, 0
                            Button:
                                text: "Play/Stop"
                                on_press: root.play_stop()
                                background_color: 0, 0, 0, 0
                                #Image:
                                    #source: './img/pause-play-button.png'
                                    #y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
                                    #x: self.parent.x
                                    #width: self.parent.width
                                    #height: self.parent.width/self.image_ratio
                                    #keep_ratio: True
                                    #allow_stretch: True
                            Button:
                                text: "Next"
                                on_press: root.next()
                                background_color: 0, 0, 0, 0
                Button:
                    size_hint_y: 1
                    text: "Quit"
                    on_press: root.quit()
                    background_color: 0, 0, 0, 0

        BoxLayout:
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    Button:
                        #text: "Playlist1"
                        on_press: root.playlist(1)
                        background_color: 0, 0, 0, 0
                        Image:
                            source: './img/playlist.jpg'
                            y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
                            x: self.parent.x
                            width: self.parent.width
                            height: self.parent.width/self.image_ratio
                            keep_ratio: True
                            allow_stretch: True
                    Button:
                        #text: "Playlist2"
                        on_press: root.playlist(2)
                        background_color: 0, 0, 0, 0
                        Image:
                            source: './img/playlist.jpg'
                            y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
                            x: self.parent.x
                            width: self.parent.width
                            height: self.parent.width/self.image_ratio
                            keep_ratio: True
                            allow_stretch: True

                BoxLayout:
                    Button:
                        text: "Playlist7"
                        on_press: root.playlist(7)
                        background_color: 0, 0, 0, 0
                    Button:
                        text: "Playlist8"
                        on_press: root.playlist(8)
                        background_color: 0, 0, 0, 0